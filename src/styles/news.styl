.new-list
  min-height: calc(100vh - 50px)
  padding: 0 20px
  background: #ffffff
  .new-item 
    display: flex
    justify-content: space-between
    align-items: flex-start
    padding: 10px 0
    border-bottom: 1px dashed #666
    &:last-child 
      border-bottom: none
    .new-time
      font-size: 12px
      color: #777777
      margin-top: 10px
    .left
      width: calc(100% - 100px)
      .new-title
        font-size: 14px
    .right
      width: 90px
      height: 90px
      .img 
        width: 100%
        height: 100%