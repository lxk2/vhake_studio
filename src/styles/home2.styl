.main
  min-height: 100vh
  .bg
    background-image: url(../../assets/new/bgbg.png)
    background-size: 100% auto
    background-position: center bottom
    height: 100vh
    background-repeat: no-repeat
    position: fixed
    width: 100%
    z-index: -1
  .bg-c
    background-color: #f8f8f8
    height: 100vh
    width: 100%
    position: fixed
    z-index: -2
.my-swipe
  width: 100%
  height 210px
  .swipe-item 
    width: 100%
    height: 100%
    .img 
      display: block
      width: 100%
      height: 100%

.c-name
  font-size: 15px
  line-height: 48px
  color: #0095ee
  text-align: center

.tips
  font-size: 13px
  line-height: 24px
  color: #0095ee
  text-align: center
  padding: 0 25px

.block
  padding-left: 25px
  padding-right: 25px
  width: 100%
  box-sizing: border-box
  display: flex
  justify-content: center
  align-items: center
  margin-top: 30px
  .img
    display: block
    width: 100%
    height: 90px

.gird-x
  width: 100%
  display: flex
  justify-content: space-between
  align-items: center
  flex-wrap: wrap
  box-sizing: border-box
  // padding-top: 5px
  padding-left: 25px
  padding-right: 25px
  .item
    width: 142px
    height: 90px
    margin-top: 30px
    &:first-child, &:nth-child(2)
      margin-top: 5px
    .img 
      display: block
      width: 100%
      height: 100%      

.mobile-contract
  width: 100%
  box-sizing: border-box
  padding: 0 20px
  margin-top: 30px
  .img 
    display: block
    width: 100%

.myPop-over
  opacity 0

.wenan
  width: calc(100vw - 30px)
  margin: 0 auto
  background: transparent
  .img 
    display: block
    background: transparent
    width: 100%

.logo
  margin-top: 30px
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 20px
  .img 
    display: block
    height: 50px

.new-block
  padding: 0 20px
  height: 48px
  display: flex
  justify-content: space-between
  align-items: center
  font-size: 16px
  color: #0095ee
  background: #ffffff
  margin-top: 20px
  font-weight: bold
  position relative
  &:before 
    position: absolute
    content: ''
    height 100%
    width: 4px
    background: #0095ee
    left 0
  span 
    font-weight: normal

.new-list
  padding: 0 20px
  background: #ffffff
  .new-item 
    display: flex
    justify-content: space-between
    align-items: flex-start
    padding: 10px 0
    border-bottom: 1px dashed #666
    &:last-child 
      border-bottom: none
    .new-time
      font-size: 12px
      color: #777777
      margin-top: 10px
    .left
      width: calc(100% - 100px)
      .new-title
        font-size: 14px
    .right
      width: 90px
      height: 90px
      .img 
        width: 100%
        height: 100%