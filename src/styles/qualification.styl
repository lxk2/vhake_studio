.main
  min-height: 100vh
  .bg
    background-image: url(../../assets/new/bgbg.png)
    background-size: 100% auto
    background-position: center bottom
    height: 100vh
    background-repeat: no-repeat
    position: fixed
    width: 100%
    z-index: -1

.line
  width: 100%
  box-sizing: border-box
  padding: 0 25px

.zhengshu
  width: 260px
  height: 308px
  box-sizing: border-box
  border: 2px solid #e1e1e1
  display: flex
  justify-content: center
  align-items: center
  margin: 0 auto
  .img
    display: block
    width: 100%
    height: 100%

.logo
  margin-top: 30px
  display: flex
  justify-content: center
  align-items: center
  margin-bottom: 20px
  width: 100%
  position: fixed
  bottom: 0
  .img 
    display: block
    height: 50px    